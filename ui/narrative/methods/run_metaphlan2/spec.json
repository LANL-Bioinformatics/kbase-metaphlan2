{
    "ver": "0.0.1",
    "authors": [
        "mcflynn617"
    ],
    "contact": "",
    "categories": ["active"],
    "widgets": {
        "input": null,
        "output": null
    },
    "parameters": [ 
        {
            "id": "input_ref",
            "optional": false,
            "advanced": false,
            "allow_multiple": true,
            "default_values": [ "" ],
            "field_type": "text",
            "text_options": {
                "valid_ws_types": [ "KBaseSets.ReadsSet", "KBaseFile.PairedEndLibrary", "KBaseFile.SingleEndLibrary" ]
            }
        },
        {
            "id": "min_cu_len",
            "optional": true,
            "advanced": true,
            "allow_multiple": false,
            "default_values": [ "2000" ],
            "field_type": "text",
            "text_options": {
                "validate_as": "int",
                "min_integer" : 0
            }
        },
        {
            "id": "min_alignment_len",
            "optional": true,
            "advanced": true,
            "allow_multiple": false,
            "default_values": [ "0" ],
            "field_type": "text",
            "text_options": {
                "validate_as": "int",
                "min_integer" : 0
            }
        },
        {
            "id": "tax_lev",
            "optional": true,
            "advanced": true,
            "allow_multiple": false,
            "default_values": [ "a" ],
            "field_type": "dropdown",
            "dropdown_options":{
                "options": [{
                    "value": "a",
                    "display": "All taxonomic levels"
                }, {
                    "value": "k",
                    "display": "Kingdoms (Bacteria and Archaea) only"
                }, {
                    "value": "p",
                    "display": "Phyla only"
                }, {
                    "value": "c",
                    "display": "Classes only"
                }, {
                    "value": "o",
                    "display": "Orders only"
                }, {
                    "value": "f",
                    "display": "Families only"
                }, {
                    "value": "g",
                    "display": "Genera only"
                }, {
                    "value": "s",
                    "display": "Species only"
                }]
            }
        },
        {
             "id" : "ignore_viruses",
             "default_values" : [
                "0"
             ],
             "advanced" : true,
             "checkbox_options" : {
                "unchecked_value" : 0,
                "checked_value" : 1
             },
             "text_options" : {
                "valid_ws_types" : []
             },
             "field_type" : "checkbox",
             "allow_multiple" : false,
             "optional" : true
        },
        {
             "id" : "ignore_bacteria",
             "default_values" : [
                "0"
             ],
             "advanced" : true,
             "checkbox_options" : {
                "unchecked_value" : 0,
                "checked_value" : 1
             },
             "text_options" : {
                "valid_ws_types" : []
             },
             "field_type" : "checkbox",
             "allow_multiple" : false,
             "optional" : true
        },
        {
             "id" : "ignore_eukaryotes",
             "default_values" : [
                "0"
             ],
             "advanced" : true,
             "checkbox_options" : {
                "unchecked_value" : 0,
                "checked_value" : 1
             },
             "text_options" : {
                "valid_ws_types" : []
             },
             "field_type" : "checkbox",
             "allow_multiple" : false,
             "optional" : true
        },
        {
             "id" : "ignore_archaea",
             "default_values" : [
                "0"
             ],
             "advanced" : true,
             "checkbox_options" : {
                "unchecked_value" : 0,
                "checked_value" : 1
             },
             "text_options" : {
                "valid_ws_types" : []
             },
             "field_type" : "checkbox",
             "allow_multiple" : false,
             "optional" : true
        },
        {
            "id": "stat_q",
            "optional": true,
            "advanced": true,
            "allow_multiple": false,
            "default_values": [ "0.1" ],
            "field_type": "text",
            "text_options": {
                "validate_as": "float",
                "min_float" : 0
            }
        }
    ],
    "behavior": {
        "service-mapping": {
            "url": "",
            "name": "metaphlan2",
            "method": "run_metaphlan2",
            "input_mapping": [
                {
                    "narrative_system_variable": "workspace",
                    "target_property": "workspace_name"
                },
                {
                    "narrative_system_variable": "workspace_id",
                    "target_property": "workspace_id"
                },
                {
                    "input_parameter": "input_ref",
                    "target_property": "input_ref",
					"target_type_transform": "list<resolved-ref>"
                },
				{
					"input_parameter": "min_cu_len",
					"target_property": "min_cu_len"
				},
				{
					"input_parameter": "min_alignment_len",
					"target_property": "min_alignment_len"
				},
				{
					"input_parameter": "tax_lev",
					"target_property": "tax_lev"
				},
				{
					"input_parameter": "ignore_viruses",
					"target_property": "ignore_viruses"
				},
				{
					"input_parameter": "ignore_eukaryotes",
					"target_property": "ignore_eukaryotes"
				},
				{
					"input_parameter": "ignore_bacteria",
					"target_property": "ignore_bacteria"
				},
				{
					"input_parameter": "ignore_archaea",
					"target_property": "ignore_archaea"
				},
				{
					"input_parameter": "stat_q",
					"target_property": "stat_q"
				}
            ],
            "output_mapping": [
                {
                    "service_method_output_path": [0,"report_name"],
                    "target_property": "report_name"
                },
                {
                    "service_method_output_path": [0,"report_ref"],
                    "target_property": "report_ref"
                },
                {
                    "narrative_system_variable": "workspace",
                    "target_property": "workspace_name"
                }
            ]
        }
    },
    "job_id_output_field": "docker"
}
